<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="150dp"
                android:height="50dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="-25dp"
        android:top="-25dp"
        android:left="25dp"
        android:right="25dp">
        <rotate android:fromDegrees="100">
            <shape android:shape="rectangle">
                <size
                    android:width="50dp"
                    android:height="30dp"/>
                <solid android:color="@color/soft_black"/>
            </shape>
        </rotate>
    </item>

</layer-list>